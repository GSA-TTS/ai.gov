---
import '@repo/ui/styles/base/global.css';
import { UsaBanner, Head, UsaSkipNav } from '@repo/ui/components';
import { getPageTitle } from '@repo/ui/helpers';

const title = getPageTitle(Astro);
const baseUrl = import.meta.env.BASE_URL;

---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <Head title={title} baseUrl={baseUrl}/>
  </head>
  <body>
    <slot name="skip-nav" />
    <UsaBanner baseUrl={baseUrl}/>
    <slot />
  </body>
</html>
