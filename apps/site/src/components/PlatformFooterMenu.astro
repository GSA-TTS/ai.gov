---
const { content } = Astro.props;
import { v4 as uuidv4 } from 'uuid';

const menuLabel = `platform-footer-${uuidv4()}`;
---

<p id={menuLabel}>{content.title}</p>
<ul class="add-list-reset" aria-labelledby={menuLabel}>
  {
    content.items.map((item: { url: string; title: string }) => {
      return (
        <li>
          <a href={item.url}>{item.title}</a>
        </li>
      );
    })
  }
</ul>

<style>
  p {
    color: var(--ai-color-neutral-500, #a6a6a6);
    margin-top: 0;
    margin-bottom: 1rem;
  }

  ul {
    margin-bottom: 2rem;
  }

  li {
    display: block;
    line-height: 1.3;
    margin-bottom: 1rem;
  }

  a {
    color: var(--ai-footer-color-text);
    display: block;
    text-underline-offset: 6px;
  }

  a:hover {
    text-decoration: none;
  }
</style>
