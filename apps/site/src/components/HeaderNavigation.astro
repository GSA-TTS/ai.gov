---
import Logo from '@repo/ui/components/Logo.svelte';
import MenuButton from './MenuButton.svelte';
import NavLinks from './NavLinks.svelte';
import SearchBar from './SearchBar.svelte';
import NavActionButtons from './NavActionButtons.svelte';
import { getUrlFromBase } from '@repo/ui/helpers';

let isPlatformExpanded = false;
function togglePlatformMenu() {
  isPlatformExpanded = !isPlatformExpanded;
}
---

<div class="usa-overlay"></div>
<div class="usa-header usa-header--basic height-15">
  <div class="usa-nav-container ai-nav-container">
    <div class="usa-navbar ai-navbar">
      <Logo />
      <MenuButton />
      <nav aria-label="Primary navigation" class="usa-nav ai-nav">
        <button type="button" class="usa-nav__close">
          <img
            src={getUrlFromBase('uswds/img/usa-icons/close.svg')}
            role="img"
            alt="Close"
          />
        </button>
        <div>
          <NavLinks
            isPlatformExpanded={isPlatformExpanded}
            togglePlatformMenu={togglePlatformMenu}
          />
        </div>
        <div class="ai-action-bar">
          <SearchBar />
          <NavActionButtons />
        </div>
      </nav>
    </div>
  </div>
</div>

<style>
  .ai-nav-container {
    display: flex;
    flex-direction: column;
    padding-left: 0;
    padding-right: 0;
  }

  @media (--ai-size-breakpoint-desktop) {
    .ai-nav-container {
      display: flex;
      flex-direction: row;
      height: auto;
      position: relative;
      top: var(--ai-size-64);
    }
    .ai-navbar {
      width: fit-content;
      display: flex;
      flex-direction: row;
      flex: auto;
      gap: var(--ai-size-16);
      align-items: center;
      justify-content: flex-end;
    }
    .ai-nav {
      padding: 0;
    }
    .ai-action-bar {
      display: flex;
      flex-direction: row;
      flex: auto;
      gap: var(--ai-size-16);
      align-items: center;
      justify-content: flex-end;
    }
  }
</style>
