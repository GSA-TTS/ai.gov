---
import '../styles/global.css';
import UsaHeader from '../components/UsaHeader.astro';

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <script is:inline>
      if ('performance' in window) {
        performance.mark('gsa:documenthead:start');
      }
    </script>
    <script is:inline src="/uswds/js/uswds-init.min.js"></script>
    <script is:inline>
      if ('performance' in window) {
        performance.mark('gsa:documenthead:end');
      }
    </script>
  </head>
  <body>
    <script>
      import '@repo/ui/static/uswds/js/uswds.js';
    </script>
    <slot />
  </body>
</html>
