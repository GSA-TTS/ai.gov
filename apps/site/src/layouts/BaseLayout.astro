---
import '../styles/global.css';
import UsaBanner from '../components/UsaBanner.astro';
import Head from '../components/Head.astro';
import UsaSkipNav from '../components/UsaSkipNav.astro';
import { getPageTitle } from '../helpers/meta';

const title = getPageTitle(Astro);
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <Head title={title} />
  </head>
  <body>
    <slot name="skip-nav">
      <UsaSkipNav mainContentId="#main-content" />
    </slot>
    <UsaBanner />
    <slot />
  </body>
</html>
