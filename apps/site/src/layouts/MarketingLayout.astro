---
import BaseLayout from './BaseLayout.astro';
import { getPageTitle } from '@repo/ui/helpers';
import {
  AgencyFooter,
  AgencyHeader,
  PlatformFooter,
} from '@repo/ui/components';

const title = getPageTitle(Astro);
---

<slot name="skip-nav" />
<BaseLayout title={title}>
  <AgencyHeader />
  <slot />
  <PlatformFooter />
  <AgencyFooter />
</BaseLayout>
