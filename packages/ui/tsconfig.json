{
  "extends": "../typescript-config/base.json",
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@ui-assets/*": ["./assets/*"]
    },
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noEmit": true,
    "types": ["astro/client"]
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "**/*.astro",
    "**/*.d.ts",
  ],
  "exclude": [
    "node_modules",
    "dist",
    ".turbo",
    "**/*.test.ts",
    "**/*.test.tsx",
    "static/**/*",
    "astro.d.ts"
  ]
}