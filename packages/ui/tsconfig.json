{
  "extends": "../../packages/typescript-config/base.json", // Extend the shared monorepo config
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "jsx": "react",
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@ui-assets/*": ["./assets/*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "**/*.astro",
    "**/*.d.ts",
    "index.ts",
    "components/**/*",
    "helpers/**/*",
    "constants/**/*",
    "styles/**/*",
    "astro-config/**/*",
    "data/**/*",
    "assets/**/*.svg"
  ],
  "exclude": ["dist", "node_modules", ".turbo", "**/*.test.ts", "**/*.test.tsx", "static/**/*" ]
}
